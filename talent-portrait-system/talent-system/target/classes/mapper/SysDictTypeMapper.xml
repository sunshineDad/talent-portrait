<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cgn.talent.system.mapper.SysDictTypeMapper">

    <resultMap id="BaseResultMap" type="com.cgn.talent.system.entity.SysDictType">
        <id column="id" property="id"/>
        <result column="dict_name" property="dictName"/>
        <result column="dict_type" property="dictType"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 根据字典类型查询 -->
    <select id="selectDictTypeByType" resultMap="BaseResultMap">
        SELECT * FROM sys_dict_type
        WHERE dict_type = #{dictType}
        LIMIT 1
    </select>

    <!-- 校验字典类型唯一性 -->
    <select id="checkDictTypeUnique" resultType="int">
        SELECT COUNT(1) FROM sys_dict_type
        WHERE dict_type = #{dictType}
        <if test="dictId != null">
            AND id != #{dictId}
        </if>
    </select>

    <!-- 查询所有字典类型 -->
    <select id="selectDictTypeAll" resultMap="BaseResultMap">
        SELECT * FROM sys_dict_type
        WHERE status = '0'
        ORDER BY create_time
    </select>
</mapper>
